.rankingBox{
  margin: 0 20rpx;
  border-top: 1rpx solid #ddd;
}
.rankingBox .topBox{
  background-color: #fff;
  padding: 10rpx 10rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.rankingBox .text::before{
  width: 8rpx;
  height: 30rpx;
  display: block;
  content: "";
  background: #d43c33;
  position: absolute;
  top: 18rpx;
  left: 0;
}
.rankingBox .txt-1{
  color: #d43c33;
  margin:0 20rpx;
  font-weight:bold
}
.rankingBox .txt-2{
  font-size: 25rpx;
  color: #bababa;

}
.more{
    font-size: 26rpx;
    margin: 6rpx 0;
    color: #444;
}
.ranking{
  white-space: wrap;
}
.ranking navigator{
  width: 100%;
  height: 150rpx;
  background: #ffb;
  position: relative;
  display: inline-block;
  margin: 5rpx 5rpx;
}
.ranking image{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid red;
  margin: 20rpx;
}
.ranking .textBox{
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  width: 85%;
  position: absolute;
  left: 100rpx;
  top: 30rpx;

}
.ranking .name{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.ranking .achievement{
  font-size: 25rpx;
  color: red;
  margin: 5rpx 20rpx 20rpx;
}
.ranking .declarationBox{
  margin: 10rpx 0rpx 10rpx 60rpx;
  width: 50%;
  font-size: 20rpx;
  color: #d43c33;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.ranking .declarationName{
  font-size: 25rpx;
}
.ranking .declaration{
  padding: 0 10rpx;
}
.ranking .departments{
  font-size: 25rpx;
  color: #aaa;
}
.ranking .num{
  font-size: 40rpx;
  color: #f83;
}