
.taskBox{
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.task{
  margin: 20rpx 0;

}

.title{
  margin: 20rpx 20rpx;

}
.imgBox button{
  margin: 0;
  font-size: 60rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #ccc;
}
.imgBox{
  display: flex;
}
.imgBox .imgs{
  margin: 0 10rpx;
}

.img{
  width: 150rpx;
  margin: 10rpx;
  height: 0rpx;
  border-radius: 10rpx;
}

.box{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}